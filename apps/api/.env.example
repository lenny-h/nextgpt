PORT = "3004"

NODE_ENV = "development"

BASE_URL = "http://localhost:3000"
ALLOWED_ORIGINS = "http://localhost:3000,http://localhost:3001"

# Document processor
DOCUMENT_PROCESSOR_URL = "http://localhost:3006"

# Better Auth configuration and Resend email service (for sending verification emails)
BETTER_AUTH_URL = "http://localhost:3004"
 # Better Auth secret (can eg be generated by running 'openssl rand -hex 32' in the terminal)
BETTER_AUTH_SECRET = "your-better-auth-secret"
ENABLE_EMAIL_SIGNUP = "true"
# Comma-separated list of allowed email domains for sign-up
# e.g. "example.com,mycompany.com". Leave empty to allow all domains.
ALLOWED_EMAIL_DOMAINS = ""
RESEND_SENDER_EMAIL = "your-resend-sender-email"
RESEND_API_KEY = "your-resend-api-key"

# Google OAuth
GOOGLE_CLIENT_ID = "your-google-client-id"
GOOGLE_CLIENT_SECRET = "your-google-client-secret"

# Database and Redis
DATABASE_PASSWORD = "your-database-password"
DATABASE_HOST = "localhost:5432"
# Encryption key for sensitive data (can eg be generated by running 'openssl rand -hex 32' in the terminal)
ENCRYPTION_KEY = "your-64-character-encryption-key"
REDIS_URL = "redis://localhost:6379" # Has format: redis://HOST:PORT

USE_LOCAL_FILE_STORAGE = "true"
USE_CLOUDFLARE_R2 = "true"
USE_LOCAL_TASKS_CLIENT = "true"
USE_OPENAI_API = "true"

# Local MinIO configuration
# Activate if USE_LOCAL_FILE_STORAGE is "true"
MINIO_ENDPOINT = "localhost:9000"
MINIO_ROOT_USER = "minioadmin"
MINIO_ROOT_PASSWORD = "minioadmin"

