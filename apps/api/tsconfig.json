{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@workspace/api-routes/*": ["../../packages/api-routes/src/*"],
      "@workspace/server/*": ["../../packages/server/src/*"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}