# General Configuration
site_url = "your-domain" # e.g. "example.com"

# GCP Configuration
project_id = "your-gcp-project-id"
gcp_region = "your-gcp-region" # e.g. "europe-west1"
gcp_zone   = "your-gcp-zone"   # e.g. "europe-west1-b"

# Email Configuration
enable_email_signup   = "true"
allowed_email_domains = ""
resend_sender_email   = "onboarding@your-domain"
resend_api_key        = "your-resend-api-key"

# Better Auth Configuration
better_auth_secret   = "your-better-auth-secret" # (can eg be generated by running 'openssl rand -hex 32' in the terminal)
# To obtain the following two values, create OAuth credentials in GCP console
google_client_id     = "your-google-client-id.apps.googleusercontent.com"
google_client_secret = "your-google-client-secret"

# Database Configuration
db_password    = "your-super-secret-and-long-postgres-password"
encryption_key = "your-encryption-key" # (can eg be generated by running 'openssl rand -hex 32' in the terminal)

# Cloudflare Configuration
use_cloudflare_r2               = "true"
cloudflare_account_id           = "your-cloudflare-account-id"
cloudflare_api_token            = "your-40-token-cloudflare-api-token-abcde"
r2_location                     = "your-r2-location" # (one of "apac", "eeur", "enam", "weur", "wnam", "oc"; apac -> Asia-Pacific, eeur -> Eastern Europe, enam -> Eastern North America, weur -> Western Europe, wnam -> Western North America, oc -> Oceania)
# To obtain the following two env variables, create an R2 api key with permission "Objects Read/Write"
cloudflare_r2_access_key_id     = "your-cloudflare-r2-access-key-id"
cloudflare_r2_secret_access_key = "your-cloudflare-r2-secret-access-key"

# LLM Configuration
embeddings_model = "text-embedding-004"
llm_models       = "gemini-2.5-flash,gemini-2.5-pro"
