# Better Auth secret
# Can e.g. be generated by running 'openssl rand -hex 32' in the terminal (MacOS/Linux) or
# '[byte[]]$bytes = New-Object byte[] 32; [Security.Cryptography.RandomNumberGenerator]::Create().GetBytes($bytes); ($bytes | ForEach-Object { $_.ToString("x2") }) -join ""' in Powershell (Windows)
BETTER_AUTH_SECRET = "your-better-auth-secret"
ENABLE_EMAIL_SIGNUP = "true"
# Comma-separated list of allowed email domains for sign-up
# e.g. "example.com,mycompany.com". Leave empty to allow all domains.
ALLOWED_EMAIL_DOMAINS = ""

# SSO Configuration
USE_SSO = "false"
# # Not required if USE_SSO is "false"
# SSO_DOMAIN = "example.com"
# SSO_PROVIDER_ID = "keycloak-test"
# SSO_CLIENT_ID = "test-client"
# SSO_CLIENT_SECRET = "your-sso-client-secret"
# SSO_ISSUER = "http://localhost:8080/realms/test-realm"
# SSO_AUTHORIZATION_ENDPOINT = "http://localhost:8080/realms/test-realm/protocol/openid-connect/auth"
# SSO_DISCOVERY_ENDPOINT = "http://localhost:8080/realms/test-realm/.well-known/openid-configuration"
# SSO_TOKEN_ENDPOINT = "http://localhost:8080/realms/test-realm/protocol/openid-connect/token"
# SSO_JWKS_ENDPOINT = "http://localhost:8080/realms/test-realm/protocol/openid-connect/certs"

# Mail configuration (Not required if ENABLE_EMAIL_SIGNUP is "false")
RESEND_SENDER_EMAIL = "your-resend-sender-email"
RESEND_API_KEY = "your-resend-api-key"

# Google OAuth
GOOGLE_CLIENT_ID = "your-google-client-id"
GOOGLE_CLIENT_SECRET = "your-google-client-secret"

# Database and Redis
DATABASE_PASSWORD = "your-database-password"
# Encryption key for sensitive data
# Can e.g. be generated by running 'openssl rand -hex 32' in the terminal (MacOS/Linux) or
# '[byte[]]$bytes = New-Object byte[] 32; [Security.Cryptography.RandomNumberGenerator]::Create().GetBytes($bytes); ($bytes | ForEach-Object { $_.ToString("x2") }) -join ""' in Powershell (Windows)
ENCRYPTION_KEY = "your-64-character-encryption-key"

USE_LOCAL_TASKS_CLIENT = "true"
USE_LOCAL_FILE_STORAGE = "true"
USE_CLOUDFLARE_R2 = "true"
USE_OPENAI_API = "true"
OPENAI_API_KEY = "your-openai-api-key" # Not required if USE_OPENAI_API is "false"

# Local MinIO configuration
# Not required if USE_LOCAL_FILE_STORAGE is "false"
MINIO_ROOT_USER = "minioadmin"
MINIO_ROOT_PASSWORD = "minioadmin"

# Cloudflare R2 configuration
# Not required unless USE_LOCAL_FILE_STORAGE is "false" and USE_CLOUDFLARE_R2 is "true"
R2_ENDPOINT = "https://<your-account-id>.r2.cloudflarestorage.com"
CLOUDFLARE_ACCESS_KEY_ID = "your-cloudflare-access-key-id"
CLOUDFLARE_SECRET_ACCESS_KEY = "your-cloudflare-secret-access-key"

# AI models (make sure these are supported by your cloud provider)
EMBEDDINGS_MODEL = "text-embedding-3-small" # GCP: text-embedding-004
LLM_MODELS = "gpt-4o,gpt-5" # Comma-separated list of allowed LLM models; GCP: gemini-2.5-flash,gemini-2.5-pro

# # ==============================
# # Firecrawl configuration
# # ==============================

# FIRECRAWL_API_URL = "http://localhost:3007"

# A cloud provider is only used for local development if
# (!USE_LOCAL_FILE_STORAGE && !USE_CLOUDFLARE_R2) || (!USE_OPENAI_API)

# Options: "gcloud", "aws"
# Azure is currently not supported
CLOUD_PROVIDER = "gcloud"

